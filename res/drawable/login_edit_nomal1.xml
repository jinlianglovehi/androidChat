<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="false">
        <shape>
            <gradient android:angle="90" android:endColor="#F5F5F5" android:startColor="#F5F5F5" />
            <!-- stroke 描边 -->
            <stroke android:width="1dip" android:color="#D3D3D3" />
            <!-- corners 圆角 android:radius为角的弧度，值越大角越圆。 -->
            <corners android:radius="30dip" />
            <padding android:bottom="5dp" android:left="15dp" android:top="5dp" />
        </shape></item>

</selector>