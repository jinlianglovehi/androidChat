<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/DIMEN_12PX"
    android:layout_marginLeft="@dimen/DIMEN_48PX"
    android:orientation="vertical" >

    <!-- 机械人的名称 -->

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_24PX"
        android:text="@string/robot"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/DIMEN_96PX"
        android:layout_marginRight="@dimen/DIMEN_48PX"
        android:background="@drawable/chatfrom_bg_normal" >

        <ImageView
            android:id="@+id/iv_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_48PX"
            android:layout_marginRight="@dimen/DIMEN_120PX"
            android:layout_marginTop="@dimen/DIMEN_24PX"
            android:background="@drawable/voice_from_icon"
            android:contentDescription="@null"
            android:maxWidth="@dimen/DIMEN_480PX"
            android:scaleType="fitXY"
            android:visibility="visible" />
    </LinearLayout>
    <!-- 对方发送发的图片 -->

</LinearLayout>